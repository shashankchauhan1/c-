// Write a program to take cost and selling price from user and print how much loss or profit he makes.


#include <iostream>
using namespace std;

int main()
{
    int cp,sp;
    cout<<"cost price: ";
    cin>>cp;
    cout<<"Selling price: ";
    cin>>sp;
    
    if(sp>cp){
        cout<<"Your profit is: "<<sp-cp<<endl;
    }
    if(sp<cp){
        cout<<"Your loss is: "<<cp-sp<<endl;
    }

    return 0;
}
