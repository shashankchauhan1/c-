// program to check weather the given number is the power of 2 or not.


#include<iostream>
#include<cmath>

using namespace std;
int main(){
    int n,flag;
    cout<<"Enter number: ";
    cin>>n;
    for(int i=0; i<32; i++){
        if(n==pow(2,i)){
            flag=1;
            break;
        }
    }
    if(flag){
        cout<<"Power of 2";
    }
    else{
        cout<<"Not the power of 2";
    }
    return 0;
}
