// write a program to check weather the input is a 3digit number or not


#include <iostream>
using namespace std;

int main()
{
    int n;
    cout<<"Enter a number: ";
    cin>>n;
    
    int count=0;
    while(n>0){
        
        count++;
        n=n/10;
    }
    
    if(count==3){
        cout<<"it is a three digit number."<<endl;
    }
    else{
        cout<<"it is not a three digit number."<<endl;
    }
    return 0;
}
